@model TheCoreBanking.Customer.Data.Models.TblCasa

@section pagedescription{
<span class="title f24px">POST STATUS M0DULE</span>
}

<div class="card" id="account-card">
    <div class="card-header text-center">
        <h4 class="card-title">Account</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="card card-plain">
                <div class="card-body">
                    <div id="account-custom-toolbar">
                        
                    </div>
                    <table id="post-status-data-table" class="data-table"
                           data-toggle="table" data-search="true"
                           data-search-align="right" data-toolbar="#account-custom-toolbar"
                           data-buttons-class="danger" data-show-refresh="true"
                           data-show-toggle="true" data-mobile-responsive="true"
                           data-check-on-init="true" data-pagination="true"
                           data-show-pagination-switch="true" data-unique-id="casaaccountid"
                           data-min-width="">
                        <thead>
                            <tr>
                                <th data-field="accountnumber"
                                    data-sortable="true">
                                    Account Number
                                </th>
                                <th data-field="accountname"
                                    data-sortable="true">
                                    Account Name
                                </th>
                                <th data-field="productName"
                                    data-sortable="true"
                                    >
                                    Product
                                </th>
                                @*<th data-field="accountstatus.accountstatusname"
            data-sortable="true">
            Status
        </th>*@
                                
                                <th data-field="postnostatusid"
                                    data-formatter="utilities.postNameFormatter"
                                    data-sortable="true" data-align="right">
                                    Account Post Status
                                </th>
                                <th data-field="approvalstatusid" 
                                    data-formatter="utilities.approvalStatusFormatter"
                                    data-sortable="true" data-align="right">
                                    Appproval Status
                                </th>
                                @*<th data-formatter="utilities.editAccountFormatter"
                                    data-width="5%" data-align="center"></th>*@
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

